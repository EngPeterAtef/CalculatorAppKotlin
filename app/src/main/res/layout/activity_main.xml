<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:clickable="true"
        android:ellipsize="start"
        android:singleLine="true"
        android:textColor="@color/actionButton"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:clickable="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=" = "
        android:textColor="@color/white"
        android:textSize="36sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvClear"
                style="@style/ActionButtonStyle"
                android:background="@drawable/circle_1"
                android:clickable="true"
                android:text="AC"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLeftBracket"
                style="@style/ActionButtonStyle"
                android:background="@drawable/circle_1"
                android:clickable="true"
                android:text="("
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRightBracket"
                style="@style/ActionButtonStyle"
                android:background="@drawable/circle_1"
                android:clickable="true"
                android:text=")"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDivide"
                style="@style/ActionButtonStyle"
                android:background="@drawable/circle_1"
                android:clickable="true"
                android:text="/"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeven"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="7"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEight"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="8"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNine"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="9"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMul"
                style="@style/NumberActionButton2"
                android:background="@drawable/circle_2"
                android:clickable="true"
                android:text="X"
                android:textSize="48sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFour"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="4"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFive"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="5"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSix"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="6"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMinus"
                style="@style/NumberActionButton2"
                android:background="@drawable/circle_2"
                android:clickable="true"
                android:text="-"
                android:textSize="60sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOne"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="1"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTwo"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="2"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvThree"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="3"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPlus"
                style="@style/NumberActionButton2"
                android:background="@drawable/circle_2"
                android:clickable="true"
                android:text="+"
                android:textSize="60sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDot"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="."
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvZero"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="0"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBack"
                style="@style/NumberButtonStyle"
                android:background="@drawable/circle_numbers"
                android:clickable="true"
                android:text="DEL"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEquals"
                style="@style/EqualButtonStyle"
                android:background="@drawable/circle_2"
                android:clickable="true"
                android:text="="
                android:textSize="60sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>